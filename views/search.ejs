<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spin Top Records</title>
    <%- include('./partials/header.ejs') %>
  </head>
  <body>
    <div class="content">
      <h2>Search</h2>
      <div class="search content">
        <form action="/search" method="POST">
          <label
            >Keyword:
            <input
              type="text"
              id="keyword"
              name="keyword"
              value="<%= locals.keyword %>"
              required
            />
          </label>
          <br />
          <button type="submit">Search</button>
        </form>
        <br />
        <% if (theResults && theResults.length > 0) { %> <%
        theResults.forEach(item => { %>
        <b
          ><%= item.title %> <%= item.artist %> <%= item.genre %> <%= item.label
          %></b
        >
        ><br />
        <%= item.description %><br />
        <% }) %> <% } else { %>
        <p>No search results.</p>
        <% } %>
      </div>
    </div>
    <%- include('./partials/status.ejs') %>
    <br />
    <%- include('./partials/auth.ejs') %> <%- include('./partials/footer.ejs')
    %>
  </body>
</html>
